<!-- Head -->
<%- include('partials/head') %>

  <body>
    <!-- Navbar (sit on top) -->
    <%- include('partials/navbar') %>

      <!-- Header -->
      <%- include('partials/header') %>


        <!-- Page content -->
        <div class="ps-content">

          <!-- Menu Section -->
          <div class="ps-row ps-padding-64" id="menu">
            <div class="ps-col l6 ps-padding-large">
              <h1 class="ps-center">
                <%= platos.name %>
              </h1>
              <br />
              <h4>
                <% if (platos.fulldescription.length === 0 ) { %>
                  <%= platos.default %>
                    <% } else { %>
                      <%- platos.fulldescription %>
              </h4>
              <% } %>
                <p class="ps-text-grey">
                  <%= platos.price %>
                </p>
            </div>

            <div class="ps-col l6 ps-padding-large ps-img-menu">
              <img src="/images/<%= platos.image %>" class="ps-round ps-image ps-opacity-min" alt="Menu" />
            </div>
          </div>

          <!-- Footer -->
          <%- include('partials/footer') %>
        </div>
  </body>

  </html>